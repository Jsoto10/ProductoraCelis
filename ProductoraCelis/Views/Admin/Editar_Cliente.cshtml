@model ProductoraCelis.Models.ClientesMayoristas;
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Registrar.css" />
<div>
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Clientes</h2>
        <form asp-controller="Admin" asp-action="Editar_Cliente" method="post">
        <input asp-for="IdClientes" type="hidden"/>
            <div class="mb-3">
                <label>Nombres</label>
                <input class="form-control" asp-for="Nombres" required />
            </div>
            <div class ="mb-3">
                <label>Apellidos</label>
                <input class="form-control" asp-for="Apellidos" required />
            </div>
            <div class="mb-3">
                <label>Dni</label>
                <input class="form-control" asp-for="Dni" required />
            </div>
            <div class="mb-3">
                <label>Celular</label>
                <input class="form-control" asp-for="Celular" required />
            </div>
            <div class="mb-3">
                <label>Direccion</label>
                <input class="form-control" asp-for="Direccion" required />
            </div>
            <div class="mb-3">
                <label>Fecha de Registro</label>
                <input class="form-control" asp-for="FechaRegistro" type="date" required />
            </div>
            <div class="mb-3">
                <label>Descripcion</label>
                <input class="form-control" asp-for="Descripcion" required />
            </div>

            <div class="mb-3">
                <input asp-for="Estado" type="checkbox" id="chkActivo" />
                <label>Activo</label>
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input class="form-control" asp-for="Email" required />
            </div class="mb-3">
            <div class="mb-3">
                <button type="submit" class="btn btn-warning">Guardar</button>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-danger">Volver </a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        function confirmar(){
            return("Estas seguro de eliminar este cliente?")
        }
    </script>
}