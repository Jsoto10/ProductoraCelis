@model ProductoraCelis.Models.Productos;
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Registrar.css" />
<div>
    <div>
        <h2>Formulario de registro de Productos</h2>
        <form asp-controller="Admin" asp-action="Registrar_Producto" method="post" enctype="multipart/form-data">
        <div>
            <label>Nombre de producto</label>
            <input asp-for="Nombre" type="text" class="" required/>
        </div>
            <div>
                <label>Categoria</label>
                <select asp-for="Categoria" class="" required>
                    <option value="">-- Seleccione una categoría --</option>
                    <option value="leche">Leche</option>
                    <option value="queso">Queso</option>
                    <option value="yogurt">Yogurt</option>
                    <option value="mantequilla">Mantequilla</option>
                </select>
            </div>

        <div>
            <label>Descripcion</label>
            <input asp-for="Descripcion" type="text" class="" required />
        </div>
        <div>
            <label>Stock</label>
            <input asp-for="Stock" type="number" class="" required />
        </div>
        <div>
            <label>Fecha de produccion</label>
            <input asp-for="FechaProduccion" type="date" class="" required />
        </div>
        <div>
            <label>Fecha de Vencimiento</label>
            <input asp-for="FechaVencimiento" type="date" class="" required />

        </div>
        <div>
            <label>Precio</label>
            <input asp-for="Precio" type="number" class="" required />

        </div>
        <div>
            <label>Imagen</label>
                <input asp-for="UrlImagen" type="file" id="Imagen" name="Imagen" required />
        </div>
        <div>
            <input asp-for="Estado" type="checkbox" id="chkActivo" />
            <label>Activo</label>
        </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-danger">Volver </a>
            </div>
        </form>
    </div>
</div>

